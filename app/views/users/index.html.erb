<h1>Users List</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Roles</th>
      <th colspan="2">Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.roles.any? %>
            <%= user.roles.map(&:name).join(", ") %>
          <% else %>
            No roles assigned
          <% end %>
        </td>
        <td>
          <%= link_to 'Show', user_path(user) %>
        </td>
        <td>
          <%= button_to 'Delete', users_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
