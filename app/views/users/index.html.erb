<h1>Users List</h1>
<%= link_to "Export as csv", users_path(format: 'csv') %>
<br>
<div class="table-responsive"></div>
  <table class="table table-bordered border-dark">
  <thead class="table-dark">
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Roles</th>
      <th colspan="2">Actions </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <% if user.roles.any? %>
            <%= user.roles.map(&:name).join(", ") %>
          <% else %>
            No roles assigned
          <% end %>
        </td>
        <td>
          <%= link_to 'Show', user_path(user), class: "btn btn-sm btn-info btn-outline-light text-dark" %>
        </td>
        <td>
          <%= button_to 'Delete', users_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>